<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:gravity="center"
        app:menu="@menu/toolbar_menu"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/brown"
            android:textStyle="bold"
            android:textSize="20dp"
            android:fontFamily="cursive" />
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="10dp"
                android:elevation="4dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/AccountSection"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_user_dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="25dp"
                        android:src="@drawable/logo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_margin="10dp"
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="userName"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        app:layout_constraintStart_toEndOf="@+id/img_user_dp"
                        app:layout_constraintTop_toTopOf="@+id/img_user_dp" />

                    <TextView
                        android:id="@+id/manageAccountTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Manage Account"
                        android:layout_margin="10dp"
                        android:textColor="#0025FF"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/img_user_dp"
                        app:layout_constraintStart_toEndOf="@+id/img_user_dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="10dp"
                android:elevation="4dp">

                <LinearLayout
                    android:background="@color/white"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_gravity=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orders"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <HorizontalScrollView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/all_orders"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center">

                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/icon_allorder"
                                    app:tint="@color/skin" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="All"
                                    android:textSize="14sp"
                                    android:gravity="center" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/to_recieve"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center">

                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/icon_torecieve"
                                    app:tint="@color/skin" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="To Recieve"
                                    android:textSize="14sp"
                                    android:gravity="center" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/to_ship"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center">

                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/icon_toship"
                                    app:tint="@color/skin" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="To Ship"
                                    android:textSize="14sp"
                                    android:gravity="center" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/to_pay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center">

                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/icon_topay"
                                    app:tint="@color/skin" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="To Pay"
                                    android:textSize="14sp"
                                    android:gravity="center" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/cancelled"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center">

                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/icon_cancelled"
                                    app:tint="@color/skin" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cancelled"
                                    android:textSize="14sp"
                                    android:gravity="center" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/to_review"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center">

                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/icon_toreview"
                                    app:tint="@color/skin" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="To review"
                                    android:textSize="14sp"
                                    android:gravity="center" />
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/addressSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">
                <TextView
                    android:layout_margin="15dp"
                    android:id="@+id/address_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:text="AddressBook"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="10dp"
                android:elevation="4dp">

                <TextView
                    android:padding="15dp"
                    android:id="@+id/aboutus"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="About Us"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="10dp"
                android:elevation="4dp">

                <TextView
                    android:padding="15dp"
                    android:id="@+id/privacy"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="Privacy &amp; Policy"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="10dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/Logout"
                    android:padding="15dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Logout"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/brown"
        app:itemTextColor="@color/brown"
        app:backgroundTint="@android:color/white" />
</LinearLayout>
