<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/paymentBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_top"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:text="Confirm Payment"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/tvOrderTotal"
        android:text="Order Total: Rs. 1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/tvDeliveryCharges"
        android:text="Delivery Charges: Rs. 100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="16sp"
        android:id="@+id/tvFinalTotal"
        android:text="Total Payable: Rs. 1100"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/paymentOptionsGroup"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioCard"
            android:text="Card Payment"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/radioJazzCash" android:text="JazzCash" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioEasyPaisa" android:text="EasyPaisa" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioCOD" android:text="Cash on Delivery" />
    </RadioGroup>

    <Button
        android:id="@+id/btnPlaceOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place Order"
        android:textColor="@android:color/white"
        android:backgroundTint="#388E3C"
        android:layout_marginTop="12dp" />

</LinearLayout>
